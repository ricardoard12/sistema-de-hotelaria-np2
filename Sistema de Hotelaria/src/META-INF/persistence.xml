<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="Sistema de Hotelaria" transaction-type="RESOURCE_LOCAL">
		<class>hotel.entidades.Aluguel</class>
		<class>hotel.entidades.Consumo</class>
		<class>hotel.entidades.Produto</class>
		<class>hotel.entidades.Quarto</class>
		<class>hotel.entidades.Usuario</class>
		<properties>
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/hotel" />
			<property name="javax.persistence.jdbc.user" value="root" />
<!-- 			<property name="javax.persistence.jdbc.password" value="valmar" /> -->
			<property name="javax.persistence.jdbc.password" value="natalia" />
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
		</properties>
	</persistence-unit>
</persistence>
